{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "alwaysStrict": true,
    "paths": {
      "@instance": [
        "instance.js"
      ],
      "@types": [
        "api/types.ts"
      ],
    }
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
